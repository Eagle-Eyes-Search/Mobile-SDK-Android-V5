<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="dji.simpleV5.ConnectionActivity">

    <LinearLayout
        android:id="@+id/view_base_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray2"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_msdk_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="Awaiting Registration (requires internet)..." />

<!--            <TextView-->
<!--                android:id="@+id/text_view_registered"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_margin="4dp"-->
<!--                android:text="@string/unregistered"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="14sp" />-->

        <Button
            android:id="@+id/simple_cockpit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:elevation="10dp"
            android:enabled="false"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="8dp"
            android:text="Enter Simple Cockpit"
            android:textColor="@color/selector_enable_button"
            app:layout_constraintTop_toBottomOf="@+id/view_base_info"
            app:layout_constraintBottom_toBottomOf="parent"
        />

        <Button
            android:id="@+id/intermediate_cockpit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:elevation="10dp"
            android:enabled="false"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="8dp"
            android:text="Enter Intermediate Cockpit"
            android:textColor="@color/selector_enable_button"
            app:layout_constraintTop_toBottomOf="@+id/view_base_info"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            android:id="@+id/fancy_cockpit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:elevation="10dp"
            android:enabled="false"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="8dp"
            android:text="Enter Fancy Cockpit"
            android:textColor="@color/selector_enable_button"
            app:layout_constraintTop_toBottomOf="@+id/view_base_info"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>